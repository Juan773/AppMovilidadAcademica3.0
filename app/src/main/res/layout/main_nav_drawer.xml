<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/upeu"
    >

    <ImageView
        android:layout_width="121dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:onClick="ClickLogo"
        android:src="@drawable/prof2" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="davidreyna@upeu.edu.pe"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

</LinearLayout>


    <LinearLayout
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickVacantes"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_vacante"
          />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Vacantes"
            android:textColor="@color/black"

           />


    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickConvenios"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_conveni" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Convenios"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickSolAlumnos"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:rotation="180"
            android:src="@drawable/ic_sol_alu" />

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Solicitudes Alumnos"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickConvo"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:rotation="0"
            android:src="@drawable/ic_convocat" />

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Convocatorias"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickSolDoc"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:rotation="0"
            android:src="@drawable/ic_sol_doc" />

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Solicitudes Docentes"
            android:textColor="@color/black" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="160dp"></LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickLogout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Logout"

            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>